{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Response list</h1>

    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                
                <th>Call</th>
                <th>Content</th>
                <th>Attachement</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.callId.id }}</td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.attachement }}</td>
                <td>{{ entity.questionId.id }}</td>
                <td>
                <ul>
                    
                    <li>
                        <a href="{{ path('response_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('response_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('question') }}">
                Back to the list of questions
            </a>
        </li>
    </ul>
     <script type="text/javascript">
        
        $(document).ready(function() {
            $('#datatable').dataTable();
        } );

    </script>  
    {% endblock %}
