{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Questionnaire list</h1>

    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                
                <th>Language</th>
                <th>Description</th>
                <th>Welcome message</th>
                
                <th>Is generated</th>
                <th>Type</th>
                <th>Confirmationsms</th>
                <th>Final message</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.languageId.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.welcomeMessage }}</td>
                
                <td>{{ entity.isGenerated }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.confirmationSms }}</td>
                <td>{{ entity.finalMessage }}</td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    
                    <li>
                        <a href="{{ path('questionnaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('questions_questionnaire_list', { 'id': entity.id }) }}">List of questions</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('questionnaire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
                
                
    <script type="text/javascript">
        
        $(document).ready(function() {
            $('#datatable').dataTable();
        } );

    </script>            
                
                
    {% endblock %}
    
     
         
